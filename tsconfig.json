{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "components/v2/WhatsappButton.jsx", "components/v2/Footer.jsx", "components/v2/FinalCta.jsx", "components/v2/Faq.jsx", "components/v2/Testimonials.jsx", "components/v2/Benefits.jsx", "components/v2/Hero.jsx", "components/v2/Audience.tsx", "components/v2/About.jsx", "Pages/HomePage.jsx", "components/v2/Navbar.jsx", "components/v2/LeadForm.jsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}